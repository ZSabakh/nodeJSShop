<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (items.length > 0) { %>
                <ul>
                    <% items.forEach(item => { %>
                        <li>
                            <p>
                            <%= item.title %> - <%= item.quantity %> qty
                        </p>
                        <form action="/card-delete-item" method="POST">
                        <input type="hidden" value="<%= item._id %>" name="id">
                        <button class="btn" type="submit">Remove</button>
                        </form>
                        </li>
                    <% }) %>

                    
                </ul>
                <hr />
                <div class="centered">
                <form action="/new-order" method="POST">
                    <button class="btn" type="submit">Buy</button>
                </form>
            </div>
            <% } else { %>
                <h1>Nothing in cart</h1>
                <% } %>

        </main>
        <%- include('../includes/end.ejs') %>